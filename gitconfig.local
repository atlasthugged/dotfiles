[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
[core]
  editor = vim

[alias]
  lg = log \
    --graph \
    --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' \
    --abbrev-commit \
    --date=relative

# Edit the last commit
  amend= commit --verbose --amend
